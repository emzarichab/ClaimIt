<?xml version="1.0" encoding="UTF-8"?>
<ContentView
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="ClaimIt.ContentPasswordFailStep">
    <StackLayout>
      <StackLayout HorizontalOptions="Center">
        <Label Font="15" HorizontalTextAlignment="Center" TextColor="#333" Text="WE ARE UNABLE TO FIND THAT" Margin="0, 30, 0, 0"></Label>
        <Label Font="15" HorizontalTextAlignment="Center" TextColor="#333" Text="PARTICIPANT ID"></Label>
      </StackLayout>
      <Image Source="Wrong.png" WidthRequest="100" HeightRequest="100" Margin="0, 50, 0, 0" />
      <Image
        x:Name="tryAgainImageBtn"
        Source="TryAgain.png"
        Margin="100, 30, 100, 0"
        Aspect="AspectFit"
      />
      <Label Text="PLEASE TRY AGAIN OR TAP THE BOTTOM TO TALK TO A TRIAL COORDINATOR" TextColor="#333" FontSize="14" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="30, 10, 30, 0" />
    </StackLayout>
</ContentView>
